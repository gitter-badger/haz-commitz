<div id="badge-link-grp">
    <div class="badge-link">
        <h4>Markdown</h4>
        <form role="form">
            <textarea class="form-control" rows="3" readonly>[![Haz Commitz Status](<%= repository_url(user_id: owner, id: name, format: :svg) %>)](<%= repository_url(user_id: owner, id: name) %>)</textarea>
        </form>
    </div>

    <div class="badge-link">
        <h4>RDOC</h4>
        <form role="form">
            <textarea class="form-control" rows="3" readonly>{<img src="<%= repository_url(user_id: owner, id: name, format: :svg) %>" alt="Haz Commitz Status" />}[<%= repository_url(user_id: owner, id: name) %>]</textarea>
        </form>
    </div>

    <div class="badge-link">
        <h4>HTML</h4>
        <form role="form">
            <textarea class="form-control" rows="3" readonly><a href="<%= repository_url(user_id: owner, id: name) %>"><img src="<%= repository_url(user_id: owner, id: name, format: :svg) %>" /></a></textarea>
        </form>
    </div>
</div>
